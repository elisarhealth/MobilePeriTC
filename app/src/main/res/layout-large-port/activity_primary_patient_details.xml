<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/primaryTwo" />

        <LinearLayout
            android:id="@+id/front_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/rounded_corner"
            android:elevation="5dp"
            android:gravity="start|center"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_anchor="@id/back_view"
            app:layout_anchorGravity="bottom|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="@string/patient_details"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="497dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parentPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="34dp"
                android:paddingTop="30dp"
                android:paddingEnd="50dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mrn_number"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/patient_mrn_number_editText_value"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/mrnhint"
                        android:imeOptions="actionSearch"
                        android:inputType="textCapCharacters|textNoSuggestions"
                        android:maxLength="24"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/searchMrn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/imageDescription"
                        android:onClick="clickCallback"
                        android:src="@drawable/ic_search_black_48px" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="34dp"
                android:paddingTop="15dp"
                android:paddingEnd="81dp"
                android:paddingBottom="30dp">


                <TextView
                    android:id="@+id/patient_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/patient_name"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/patient_FirstName_editText_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:hint="@string/please_enter_patient_name"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:maxLength="64"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/patient_mobile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/patient_mobile_number_editText_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:digits="0123456789"
                    android:hint="@string/mobilehint"
                    android:inputType="number"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/patient_dob_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/Patient_DOB_editText_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:focusable="false"
                    android:hint="@string/yyyy_mm_dd"
                    android:inputType="text"
                    android:longClickable="false"
                    android:onClick="datePicker"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    android:windowSoftInputMode="stateHidden" />

                <TextView
                    android:id="@+id/patient_sex_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/gender"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <RadioGroup
                    android:id="@+id/PatientSex_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <RadioButton
                        android:id="@+id/radio_male"
                        style="@style/MaleRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent_bg"
                        android:onClick="clickCallback"
                        android:padding="15dp"
                        android:text="@string/male" />

                    <RadioButton
                        android:id="@+id/radio_female"
                        style="@style/FemaleRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@color/transparent_bg"
                        android:onClick="clickCallback"
                        android:padding="15dp"
                        android:text="@string/female" />

                    <TextView
                        android:id="@+id/radioError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!-- <Button
         android:id="@+id/primary_details_continue_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="53dp"
         android:layout_marginEnd="138dp"
         android:layout_marginStart="374dp"
         android:text="Continue    "
         android:padding="10dp"
         android:textColor="@color/light_white"
         style="?android:attr/borderlessButtonStyle"
         android:background="@drawable/rounded_corner_button"
         android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />-->


    <Button
        android:id="@+id/primary_patient_details_continue_button"
        style="@style/RoundedButtonWithArrow"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginStart="360dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="clickCallback"
        android:padding="10dp"
        android:text="@string/continueButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>