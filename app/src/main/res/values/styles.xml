<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryTwo</item>
        <item name="colorPrimaryDark">@color/primaryTwo</item>
        <item name="colorAccent">@color/primaryTwo</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="statusBarColor">@color/colorPrimaryDark</item>-->
        <item name="android:navigationBarColor">@color/primaryTwo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!--<item name="android:windowDisablePreview">true</item>-->
        <item name="android:navigationBarColor">@color/primaryTwo</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryOne</item>
        <item name="colorPrimaryDark">@color/primaryTwo</item>
        <item name="colorAccent">@color/infoColor</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!--buttons color-->
        <item name="colorAccent">@color/primaryOne</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MaleRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_male</item>
    </style>

    <style name="FemaleRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_female</item>
    </style>

    <style name="RoundedButtonWithArrow" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_button_blue_filled</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_white_24dp</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="PrimaryColorTwoButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/primaryTwo</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="RoundedButtonWithoutArrow" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_button_blue_filled</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">15sp</item>
    </style>


</resources>
