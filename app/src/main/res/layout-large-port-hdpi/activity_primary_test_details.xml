<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primaryTwo" />

        <LinearLayout
            android:id="@+id/front_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/rounded_corner"
            android:elevation="5dp"
            android:gravity="start|center"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_anchor="@id/back_view"
            app:layout_anchorGravity="bottom|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="@string/test_details"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="497dp"
        android:layout_height="550dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/select_test_eye"
                android:textColor="@color/primaryTwo"
                android:textStyle="bold"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/toggleEye"
                android:layout_width="342dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginStart="71dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="69dp"
                android:background="@drawable/radio_group_bg"
                android:checkedButton="@+id/left_eye_switch"

                android:orientation="horizontal">   <!--android:checkedButton="@+id/selectEyeRadioGroup" android:checkedButton="@+id/left_eye_switch" -->

                <RadioButton
                    android:id="@+id/left_eye_switch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/eye_custom_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/left_eye"
                    android:textColor="@drawable/eye_custom_radio_button_color"
                    android:textSize="21sp" />

                <RadioButton
                    android:id="@+id/right_eye_switch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/eye_custom_radio_button"
                    android:button="@null"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="@string/right_eye"
                    android:textColor="@drawable/eye_custom_radio_button_color"
                    android:textSize="21sp" />
            </RadioGroup>

            <View
                android:layout_width="353dp"
                android:layout_height="2dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="72dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="139dp"
                android:layout_marginTop="31dp"
                android:gravity="center"
                android:text="@string/select_test_pattern"
                android:textColor="@color/primaryTwo"
                android:textStyle="bold"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/test_pattern_spinner"
                android:layout_width="355dp"
                android:layout_height="62dp"
                android:layout_marginStart="71dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="71dp"
                android:background="@drawable/spinner_drawable"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:overlapAnchor="false">

            </Spinner>

            <View
                android:layout_width="353dp"
                android:layout_height="2dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="72dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="129dp"
                android:layout_marginTop="31dp"
                android:gravity="center"
                android:text="@string/select_test_strategy"
                android:textColor="@color/primaryTwo"
                android:textStyle="bold"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/test_strategy_spinner"
                android:layout_width="355dp"
                android:layout_height="62dp"
                android:layout_marginStart="71dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="71dp"
                android:background="@drawable/spinner_drawable"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:overlapAnchor="false" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- <Button
         android:id="@+id/primary_details_continue_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="53dp"
         android:layout_marginEnd="138dp"
         android:layout_marginStart="374dp"
         android:text="Continue    "
         android:padding="10dp"
         android:textColor="@color/light_white"
         style="?android:attr/borderlessButtonStyle"
         android:background="@drawarounded_corner_button_blue_filledtton"
         android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />-->


    <Button
        android:id="@+id/primary_test_details_continue_button"
        style="@style/RoundedButtonWithArrow"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="clickCallback"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:stateListAnimator="@null"
        android:text="@string/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>