<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/primaryTwo" />

        <LinearLayout
            android:id="@+id/front_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/rounded_corner"
            android:elevation="5dp"
            android:gravity="start|center"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_anchor="@id/back_view"
            app:layout_anchorGravity="bottom|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="PRB Management"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="497dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="34dp"
                android:paddingTop="15dp"
                android:paddingEnd="81dp"
                android:paddingBottom="30dp">


                <TextView
                    android:id="@+id/nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Nature Of Change"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/reason_spinner"
                    android:layout_width="355dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/spinner_drawable"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:overlapAnchor="false">

                </Spinner>


                <TextView
                    android:id="@+id/patient_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Service Report Number"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/service_report_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:hint="Enter Service report number"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:maxLength="64"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prb_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="PRB Serial Number"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/prb_serial_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:hint="Enter PRB Serial number"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:singleLine="true"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/prb_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="PRB Click Count"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/prb_count_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:digits="0123456789"
                    android:hint="Enter PRB click count"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!-- <Button
         android:id="@+id/primary_details_continue_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="53dp"
         android:layout_marginEnd="138dp"
         android:layout_marginStart="374dp"
         android:text="Continue    "
         android:padding="10dp"
         android:textColor="@color/light_white"
         style="?android:attr/borderlessButtonStyle"
         android:background="@drawable/rounded_corner_button"
         android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />-->


    <Button
        android:id="@+id/prb_update"
        style="@style/RoundedButtonWithArrow"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginStart="360dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>