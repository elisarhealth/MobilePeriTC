<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash_screen"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="600dp"
        android:contentDescription="@string/vr_man"
        android:src="@drawable/baseline_account_circle_white_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/toggleProfile"
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginStart="71dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="69dp"
        android:background="@drawable/profile_selector_bg"
        android:checkedButton="@+id/user_switch"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileIcon">   <!--android:checkedButton="@+id/selectEyeRadioGroup" android:checkedButton="@+id/left_eye_switch" -->

        <RadioButton
            android:id="@+id/user_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/profile_selector_button"
            android:button="@null"
            android:gravity="center"
            android:onClick="clickCallback"
            android:text="@string/user"
            android:textColor="@drawable/profile_selector_button_color"
            android:textSize="21sp" />

        <RadioButton
            android:id="@+id/admin_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/profile_selector_button"
            android:button="@null"
            android:buttonTint="@color/white"
            android:gravity="center"
            android:onClick="clickCallback"
            android:text="@string/admin"
            android:textColor="@drawable/profile_selector_button_color"
            android:textSize="21sp" />
    </RadioGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:visibility="invisible"
        android:layout_marginBottom="50dp"
        android:background="@color/transparent_bg"
        app:hintTextColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleProfile"
        app:passwordToggleDrawable="@drawable/toggle_password_white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white">

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:cursorVisible="true"
            android:hint="@string/password_hint"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="50dp"
        android:background="@color/transparent_bg"
        app:hintTextColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleProfile"
        app:passwordToggleDrawable="@drawable/toggle_password_white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white">

        <EditText
            android:id="@+id/user_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:cursorVisible="true"
            android:hint="@string/pin"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:selectAllOnFocus="true"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/new_ripple_effect"
        android:onClick="clickCallback"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/login"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_layout" />

    <Button
        android:id="@+id/signUp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/new_ripple_effect"
        android:onClick="clickCallback"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_layout" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/forgotPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="clickCallback"
            android:text="@string/forgot_password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/serviceLogin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="clickCallback"
            android:text="@string/service_login"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/greenTick"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginTop="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/password_layout"
        app:layout_constraintTop_toBottomOf="@+id/toggleProfile"
        app:srcCompat="@drawable/ic_done_green_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>