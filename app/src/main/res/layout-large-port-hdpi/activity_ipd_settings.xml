<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primaryTwo" />

        <LinearLayout
            android:id="@+id/front_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/rounded_corner"
            android:elevation="5dp"
            android:gravity="start|center"
            android:orientation="horizontal"

            android:padding="5dp"
            app:layout_anchor="@id/back_view"
            app:layout_anchorGravity="bottom|center"
            tools:layout_editor_absoluteY="0dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="@string/adjust_ipd_settings"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/liveFeedCard"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/imageDescription"
            android:src="@drawable/ic_remove_red_eye" />

        <TextView
            android:id="@+id/eyeType"
            android:layout_width="92dp"
            android:layout_height="32dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/right_eye"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ipdEye"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/imageDescription" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cameraSettingsCard"
        android:layout_width="496dp"
        android:layout_height="120dp"
        android:layout_marginBottom="120dp"
        android:padding="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveFeedCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/contrast"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <Button
                        android:id="@+id/contrastDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_minus"
                        android:onClick="clickCallback" />


                </LinearLayout>

                <EditText
                    android:id="@+id/cameraAlpha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <Button
                        android:id="@+id/contrastUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_add"
                        android:onClick="clickCallback" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="Brightness"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <Button
                        android:id="@+id/brightnessDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_minus"
                        android:onClick="clickCallback" />


                </LinearLayout>

                <EditText
                    android:id="@+id/cameraBeta"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:inputType="numberDecimal" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <Button
                        android:id="@+id/brightnessUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_add"
                        android:onClick="clickCallback" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ipdKnobMessage"
        android:layout_width="496dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveFeedCard">

        <TextView
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="25dp"
            android:text="@string/adjust_ipd_so_that_eyes_are_centered"
            android:textColor="@color/primaryTwo"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="362dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/imageDescription"
            android:src="@drawable/icon_knob_new" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/ipd_settings_continue_continue_button"
        style="@style/RoundedButtonWithArrow"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="360dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:contentDescription="@string/imageDescription"
        android:focusable="true"
        android:onClick="clickCallback"
        android:padding="10dp"
        android:text="@string/continueButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/camera_settings"
        style="@style/RoundedButtonWithoutArrow"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="24dp"
        android:drawableEnd="@drawable/ic_baseline_photo_camera_24px"
        android:onClick="clickCallback"
        android:padding="10dp"
        android:text="@string/show_camera_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ipd_settings_continue_continue_button"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>