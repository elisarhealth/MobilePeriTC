<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/holder"
            android:layout_width="470dp"
            android:layout_height="700dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            app:cardCornerRadius="2dp"
            app:layout_constraintEnd_toStartOf="@+id/firstStick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/curvedFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imageDescription"
                    android:src="@drawable/home_screen_bg_without_tm" />
            </FrameLayout>


            <LinearLayout
                android:id="@+id/old_session_linear"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="39dp"
                android:background="@color/transparent_bg"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/old_session_img"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_new"
                    android:contentDescription="@string/imageDescription"
                    android:onClick="clickCallback"
                    android:src="@drawable/report" />

                <Button
                    android:id="@+id/old_session"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ripple_new"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="clickCallback"
                    android:text="Large Port"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_reports_linear"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginStart="209dp"
                android:layout_marginTop="162dp"
                android:background="@color/transparent_bg"
                android:clickable="true"
                android:focusable="true"
                android:onClick="clickCallback">

                <ImageView
                    android:id="@+id/view_reports_img"
                    android:layout_width="85dp"
                    android:layout_height="85dp"

                    android:contentDescription="@string/imageDescription"
                    android:src="@drawable/report" />

                <Button
                    android:id="@+id/view_reports"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ripple_new"
                    android:onClick="clickCallback"
                    android:text="@string/reports"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_test_container"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginStart="247dp"
                android:layout_marginTop="329dp"
                android:background="@color/transparent_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/new_test_img"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"

                    android:contentDescription="@string/imageDescription"
                    android:src="@drawable/new_test" />

                <Button
                    android:id="@+id/new_test"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ripple_new"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="clickCallback"
                    android:text="@string/new_test"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="480dp"
                android:background="@color/transparent_bg"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/settings_img"
                    android:layout_width="85dp"
                    android:layout_height="85dp"

                    android:contentDescription="@string/imageDescription"
                    android:src="@drawable/settings" />

                <Button
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ripple_new"
                    android:onClick="clickCallback"
                    android:text="@string/settings"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="580dp"
                android:background="@color/transparent_bg"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/hmd_settings_img"
                    android:layout_width="85dp"
                    android:layout_height="85dp"

                    android:contentDescription="@string/imageDescription"
                    android:src="@drawable/hmd_details_icon" />

                <Button
                    android:id="@+id/hmd_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ripple_new"
                    android:onClick="clickCallback"
                    android:text="@string/hmd_settings"
                    android:textColor="@color/primaryTwo"
                    android:textSize="18sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/firstStick"
            android:layout_width="8dp"
            android:layout_height="680dp"
            android:layout_marginTop="22dp"

            android:background="@drawable/stick_one_background"
            app:layout_constraintStart_toEndOf="@+id/holder"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/secondStick"
            android:layout_width="8dp"
            android:layout_height="650dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/stick_two_background"
            app:layout_constraintStart_toEndOf="@+id/firstStick"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/floatingMenu_CoordinatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/batteryFabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/standard_23"
            android:layout_marginBottom="@dimen/standard_23"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/standard_12"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/batteryLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/circular_view_green_small"
                    android:elevation="2dp"
                    android:padding="6dp"
                    android:text="@string/dashes"
                    android:textColor="#000000" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/batteryFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:onClick="clickCallback"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/primaryOne"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_sharp_battery_charging_full_24px" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/battery" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fabParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:visibility="visible">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:gravity="center_vertical"
                android:onClick="clickCallback"
                app:maxImageSize="40dp"
                app:backgroundTint="@color/primaryOne"
                app:fabSize="mini"
                android:scaleType="center"
                app:srcCompat="@drawable/vr_float_purple_new2" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>